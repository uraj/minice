#include <miniemu/memory/vmempage.h>
#include <stdlib.h>
#include <stdio.h>

void * allocate_page()
{
    void * temp = NULL;
    temp = calloc(VMEMPAGE_SIZE, 1);
    if(!temp)
    {
        fprintf(stderr, "Memory allocating failed!\n");
        exit(1);
    }
    return temp;
}

void free_page(int vaddr)
{
    free(guest_mem_manager[vaddr / VMEMPAGE_SIZE]);
    guest_mem_manager[vaddr / VMEMPAGE_SIZE] = NULL;
    return;
}
